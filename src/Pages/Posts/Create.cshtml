@page
@using ContosoCrafts.WebSite.Services
@using ContosoCrafts.WebSite.Models
@inject JsonFileProductService<PostModel> ProductService
@model ContosoCrafts.WebSite.Pages.Product.CreateModel

@{
    ViewData["Title"] = "Create page";
}

<h1 class="white-text">Upload Post</h1>

<div class="container white-text">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(x => x.Product.Id)

        <div class="form-group">
            <label asp-for="Product.Title" class="control-label"></label>
            <input asp-for="Product.Title" class="form-control" />
            <span asp-validation-for="Product.Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product.Description" class="control-label"></label>
            <input asp-for="Product.Description" class="form-control" />
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product.Url" class="control-label"></label>
            <input asp-for="Product.Url" class="form-control" />
            <span asp-validation-for="Product.Url" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product.Image" class="control-label"></label>
            <input asp-for="Product.Image" class="form-control" />
            <span asp-validation-for="Product.Image" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product.Ratings" class="control-label"></label>
            <input asp-for="Product.Ratings" class="form-control" />
            <span asp-validation-for="Product.Ratings" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product.Setup" class="control-label"></label>
            <input asp-for="Product.Setup" class="form-control" />
            <span asp-validation-for="Product.Setup" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product.Date" class="control-label"></label>
            <input asp-for="Product.Date" class="form-control" />
            <span asp-validation-for="Product.Date" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product.WaterTemp" class="control-label"></label>
            <input asp-for="Product.WaterTemp" class="form-control" />
            <span asp-validation-for="Product.WaterTemp" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Product.Location" class="control-label"></label>
            <input asp-for="Product.Location" class="form-control" />
            <span asp-validation-for="Product.Location" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}