@page
@model ContosoCrafts.WebSite.Pages.Posts.IndexModel
@{
    ViewData["Title"] = "Index Page";
}

<h1>All User Posts</h1>

<!--Container to display all user posts-->
<div class="container">
    <!--Table to display all user posts.-->
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Title</td>
                    <td><a asp-page="Read" asp-route-id="@product.Id">Read</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>